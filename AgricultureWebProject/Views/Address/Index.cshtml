@using EntityLayer.Concrete
@model List<Address>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Adres Listesi</h4>
			<div class="table-responsive pt-3">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>#</th>
							<th>Açıklama-1</th>
							<th>Açıklama-2</th>
							<th>Açıklama-3</th>
							<th>Açıklama-4</th>
							<th>Harita Bilgisi</th>
							<th>Sil</th>
							<th>Düzenle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.AddressID</td>
								<td>@item.Descripiton1</td>
								<td>@item.Descripiton2</td>
								<td>@item.Descripiton3</td>
								<td>@item.Descripiton4</td>
								<td>@item.Mapinfo</td>
								<td><a href="/Address/DeleteAddress/@item.AddressID" class="btn btn-danger">Sil</a></td>
								<td><a href="/Address/EditAddress/@item.AddressID" class="btn btn-success">Düzenle</a></td>
							</tr>
						}
					</tbody>
				</table>
				<br />
				<a href="/Address/AddAddress/" class="btn btn-dark">Yeni Adres Oluştur</a>
			</div>
		</div>
	</div>
</div>

