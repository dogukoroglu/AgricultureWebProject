@using EntityLayer.Concrete
@model List<Service>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Hizmetler Listesi</h4>
			<div class="table-responsive pt-3">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th>#</th>
							<th>Başlık</th>
							<th>Açıklama</th>
							<th>Görsel</th>
							<th>Sil</th>
							<th>Düzenle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.ServiceID</td>
								<td>@item.Title</td>
								<td>@item.Description</td>
								<td>@item.Image</td>
								<td><a href="/Service/DeleteService/@item.ServiceID" class="btn btn-danger">Sil</a></td>
								<td><a href="/Service/EditService/@item.ServiceID" class="btn btn-success">Düzenle</a></td>
							</tr>
						}
					</tbody>
				</table>
				<br />
				<a href="/Service/AddService/" class="btn btn-dark">Yeni Hizmet Ekle</a>
			</div>
		</div>
	</div>
</div>

