@model EntityLayer.Concrete.Announcement
@{
    ViewData["Title"] = "EditAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Duyuru Düzenleme Sayfası</h4>
			<form class="forms-sample" method="post">
				<input type="hidden" asp-for="AnnouncementID" />
				<div class="form-group">
					<label for="exampleInputName1">Başlık</label>
					<span asp-validation-for="Title" class="text-danger"></span>
					<input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık" asp-for="Title">
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Tarih</label>
					<input type="date" class="form-control" id="exampleInputName1" placeholder="Başlık" asp-for="Date">
				</div>
				<div class="form-group">
					<label for="exampleTextarea1">Açıklama</label>
					<span asp-validation-for="Descripiton" class="text-danger"></span>
					<textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="Descripiton"></textarea>
				</div>
				<button type="submit" class="btn btn-dark">Güncelle</button>
				<button type="reset" class="btn btn-outline-warning">Vazgeç</button>
			</form>
		</div>
	</div>
</div>

