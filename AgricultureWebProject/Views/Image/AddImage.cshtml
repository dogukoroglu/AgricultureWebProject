@model EntityLayer.Concrete.Image

@{
    ViewData["Title"] = "AddImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Yeni Resim Ekleme Sayfası</h4>
			<form class="forms-sample" method="post">
				<div class="form-group">
					<label for="exampleInputName1">Başlık</label>
					<span asp-validation-for="Title" class="text-danger"></span>
					<input type="text" class="form-control" id="exampleInputName1" placeholder="İsim-Soyisim" asp-for="Title">
				</div>
				<div class="form-group">
					<label for="exampleInputName1">Görsel Yolu</label>
					<span asp-validation-for="ImageUrl" class="text-danger"></span>
					<input type="text" class="form-control" id="exampleInputName1" placeholder="Görsel" asp-for="ImageUrl">
				</div>
				<div class="form-group">
					<label for="exampleTextarea1">Açıklama</label>
					<span class="text-danger" asp-validation-for="Description"></span>
					<textarea class="form-control" id="exampleTextarea1" rows="4" asp-for="Description"></textarea>
				</div>
				<button type="submit" class="btn btn-dark">Kaydet</button>
				<button type="reset" class="btn btn-outline-warning">Vazgeç</button>
			</form>
		</div>
	</div>
</div>

