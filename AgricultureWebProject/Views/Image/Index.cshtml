@using EntityLayer.Concrete
@model List<Image>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Ekip Listesi</h4>
			<div class="table-responsive">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>#</th>
							<th>Görsel</th>
							<th>Başlık</th>
							<th>Sil</th>
							<th>Düzenle</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.ImageID</td>
								<td class="py-1"><img src="@item.ImageUrl" alt="image" /></td>
								<td>@item.Title</td>
								@*<td>
							<div class="progress">
							<div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
							</div>
							</td>*@
								<td><a class="btn btn-danger" href="/Image/DeleteImage/@item.ImageID">Sil</a></td>
								<td><a class="btn btn-success" href="/Image/EditImage/@item.ImageID">Düzenle</a></td>
							</tr>
						}
					</tbody>
				</table>
				<br />
				<a class="btn btn-dark" href="/Image/AddImage/">Yeni Resim Ekle</a>
			</div>
		</div>
	</div>
</div>

